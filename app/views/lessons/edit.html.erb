<h2>Edit Menu</h2>
<h4><%= @lesson.name %></h4>

<form action ="/lessons/<%= @lesson.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="lesson_number">LessonNumber</label>
  <input id="lesson_number" name="lesson[lesson_number]" type="text" value="<%= @lesson.lesson_number %>"></br>
  <label for="lesson_name">Lesson Name</label>
  <input id="lesson_name" name="lesson[name]" type="text" value="<%= @lesson.name %>"></br>
  <label for="lesson_content">Content</label>
  <textarea id="lesson_content" name="lesson[content]" type="text" rows="20" cols ="70" ><%= @lesson.content %>
  </textarea></br>
  <button class="btn btn-success">Edit Lesson</button>
</form>
